
<view class="container">
  <scroll-view class="img-container" scroll-x>
    <view class="real-img">
      <image src="{{ tempFilePath }}" style="height: {{ imageHeight * 2 }}rpx;"/>
    </view>
  </scroll-view>
  <view class="certificate">
      <canvas canvas-id="canvasId" class="canvas"/>
  </view>

  <view class="confirm-container">
    <button plain bindtap="hanldeSavePic" class="save-pic">保存</button>
    <button plain bindtap="handleCancel">回到主页</button>
  </view>
</view>