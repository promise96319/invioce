view {
  box-sizing: border;
}
.container {
  margin: 40rpx 30rpx 160rpx;
}
.message-container {
  box-sizing: border-box;
  width: 100%;
  height: auto;
  font-size: 30rpx;
  display: flex;
}
.message-container:last-child .title,
.message-container:last-child .value {
  border-bottom: 1px solid #ccc;
}
.title {
  padding: 10rpx;
  flex: 1;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
}
.value {
  flex: 3;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  display: flex;
  align-items: center;
}
.value > view {
  width: 100%;
}
.value > view > input,
.value > view > radio-group {
  padding-left: 10rpx;
}
.value input {
  width: 100%;
}
.radio {
  font-size: 22rpx;
  margin-right: 4rpx;
}
.things-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.things-detail {
  padding: 0!important !important;
  width: 100%;
  display: flex;
}
.things-detail:last-child .things-name,
.things-detail:last-child .things-value {
  border-bottom: none;
}
.things-name {
  flex: 1;
  padding: none;
  display: flex;
  justify-content: flex-end;
  padding-right: 14rpx;
  padding-left: 10rpx;
  text-align: right;
  align-items: center;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.things-value {
  flex: 2;
  display: flex;
  padding-left: 14rpx;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.value textarea {
  width: 100%;
  min-height: 160rpx;
}
.discription {
  min-height: 160rpx;
}
.discription .title,
.discription .value {
  align-items: flex-start;
}
.question {
  width: 100%;
  margin-top: 80rpx;
}
.sale {
  font-size: 32rpx;
  line-height: 40rpx;
  margin: 16rpx 60rpx;
  display: block;
}
.sale input {
  outline: none;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}
.err-message {
  color: red;
  height: 36rpx;
  line-height: 20rpx;
}
.confirm {
  margin-top: 40rpx;
}
