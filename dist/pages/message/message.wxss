view {
  box-sizing: border;
}
radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
}
.container {
  margin: 40rpx 30rpx 160rpx;
}
.message-container {
  box-sizing: border-box;
  width: 100%;
  height: auto;
  font-size: 30rpx;
  display: flex;
}
.message-container:last-child .title,
.message-container:last-child .value {
  border-bottom: 1px solid #999;
}
.title {
  padding: 10rpx;
  flex: 1;
  border-top: 1px solid #999;
  border-left: 1px solid #999;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  color: #333;
}
.goods-detail {
  padding: 10rpx;
  flex: 1;
  border-top: 1px solid #999;
  border-left: 1px solid #999;
  display: flex;
  text-align: center;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  color: #333;
}
.value {
  flex: 3;
  border-top: 1px solid #999;
  border-left: 1px solid #999;
  border-right: 1px solid #999;
  display: flex;
  align-items: stretch;
  justify-content: space-around;
  align-items: center;
  color: #333;
}
.value > view {
  width: 100%;
}
.value > picker {
  height: 100%;
  width: 100%;
}
.value > view > input,
.value > view > radio-group {
  padding-left: 10rpx;
}
.value input {
  width: 100%;
}
.form-radio {
  height: 100%;
  display: flex;
  align-items: center;
}
.radio {
  font-size: 22rpx;
  margin-right: 30rpx;
}
.is-tax {
  font-size: 28rpx;
  margin-right: 60rpx;
}
.things-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.things-detail {
  padding: 0!important !important;
  width: 100%;
  display: flex;
}
.things-detail:last-child .things-name,
.things-detail:last-child .things-value {
  border-bottom: none;
}
.things-name {
  flex: 1;
  padding: none;
  display: flex;
  justify-content: flex-end;
  padding-right: 14rpx;
  padding-left: 10rpx;
  text-align: right;
  align-items: center;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
}
.things-value {
  flex: 2;
  display: flex;
  padding-left: 14rpx;
  align-items: center;
  border-bottom: 1px solid #999;
}
.value textarea {
  box-sizing: border-box;
  padding: 10rpx;
  width: 100%;
  min-height: 160rpx;
}
.discription {
  min-height: 160rpx;
}
.discription .title,
.discription .value {
  align-items: flex-start;
}
.question-container {
  width: 100%;
  margin-top: 90rpx;
}
.question {
  background-color: #f5f5f5;
  padding: 30rpx;
  margin-top: 20rpx;
}
.question > view {
  margin-top: 20rpx;
}
.sale {
  font-size: 28rpx;
  line-height: 48rpx;
  margin: 16rpx 60rpx;
  display: block;
}
.sale input {
  outline: none;
  border: 1px solid #999;
  border-radius: 10rpx;
}
.err-message {
  color: red;
  font-size: 28rpx;
  height: 36rpx;
  line-height: 20rpx;
}
.confirm[plain] {
  margin-top: 40rpx;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #55ACEE;
  color: #fff;
  font-size: 36rpx;
  border: none;
}
