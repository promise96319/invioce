.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  margin-top: 200rpx;
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 30rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #474747;
}
.company-btn,
.tel-btn {
  position: absolute;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
}
.company-btn {
  bottom: 60rpx;
}
.tel-btn {
  bottom: 160rpx;
}
.plain {
  background-color: #fff;
  color: #55ACEE;
  border: 1px solid #55acee;
}
.selected {
  background-color: #55ACEE;
  color: #fff;
}
